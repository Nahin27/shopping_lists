<section class="hero mt-4">
    <div class="content">
    <% if (it.lists[0].count <= 0) { %>
        <h2>No shopping lists yet.</h2>
        <% } else { %>
            <ul>
                <li class="is-size-4">Shopping lists: <%= it.lists[0].count %></li>
                <li class="is-size-4">Shopping list items: <%= it.items[0].count %></li>
            </ul>
        <% } %>
    </div>
</section>